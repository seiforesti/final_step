graph TB
    subgraph "🌐 Internet"
        USER[👤 Users<br/>Web Browsers<br/>Mobile Apps]:::user
        CDN[🌍 CDN<br/>Global Distribution<br/>Static Assets]:::cdn
    end
    
    subgraph "☁️ Cloud Platform - AWS/Azure/GCP"
        subgraph "🌐 Load Balancer Layer"
            LB[⚖️ Load Balancer<br/>Application Gateway<br/>SSL Termination]:::lb
            WAF[🛡️ WAF<br/>Web Application Firewall<br/>DDoS Protection]:::waf
        end
        
        subgraph "☸️ Kubernetes Cluster"
            subgraph "🌐 Frontend Namespace"
                UI_POD[🖥️ UI Pod<br/>React Frontend<br/>Nginx + React]:::frontend
                UI_SVC[🔗 UI Service<br/>ClusterIP<br/>Port 3000]:::service
            end
            
            subgraph "🚪 API Namespace"
                API_POD[📡 API Pod<br/>FastAPI Backend<br/>Python + Uvicorn]:::api
                API_SVC[🔗 API Service<br/>ClusterIP<br/>Port 8000]:::service
                GATEWAY_POD[🚪 Gateway Pod<br/>API Gateway<br/>Traefik + Auth]:::gateway
            end
            
            subgraph "🏗️ Services Namespace"
                DS_POD[🗄️ Data Source Pod<br/>Edge Computing<br/>Connection Manager]:::datasource
                CAT_POD[📚 Catalog Pod<br/>Asset Management<br/>AI Discovery]:::catalog
                CLASS_POD[🏷️ Classification Pod<br/>ML Classification<br/>Pattern Recognition]:::classification
                RULE_POD[📋 Rule Sets Pod<br/>Rule Engine<br/>Template Manager]:::rules
                SCAN_POD[🔍 Scan Logic Pod<br/>Workflow Engine<br/>Orchestrator]:::scan
                COMP_POD[⚖️ Compliance Pod<br/>Policy Engine<br/>Risk Assessment]:::compliance
                RBAC_POD[👥 RBAC Pod<br/>Access Control<br/>Permission Manager]:::rbac
            end
            
            subgraph "🤖 AI/ML Namespace"
                AI_POD[🧠 AI Pod<br/>Transformers<br/>NLP Processing]:::ai
                ML_POD[📊 ML Pod<br/>Scikit-learn<br/>PyTorch Models]:::ml
                NLP_POD[💬 NLP Pod<br/>SpaCy + NLTK<br/>Text Analysis]:::nlp
            end
            
            subgraph "💾 Data Namespace"
                PG_POD[🐘 PostgreSQL Pod<br/>Primary Database<br/>ACID Transactions]:::postgres
                REDIS_POD[🔴 Redis Pod<br/>Cache + Session<br/>High Performance]:::redis
                MONGO_POD[🍃 MongoDB Pod<br/>Document Store<br/>Flexible Schema]:::mongodb
                ES_POD[🔍 Elasticsearch Pod<br/>Search Engine<br/>Full-Text Search]:::elasticsearch
            end
            
            subgraph "📨 Infrastructure Namespace"
                KAFKA_POD[📨 Kafka Pod<br/>Message Broker<br/>Event Streaming]:::kafka
                PROM_POD[📊 Prometheus Pod<br/>Metrics Collection<br/>Time Series DB]:::prometheus
                GRAF_POD[📈 Grafana Pod<br/>Visualization<br/>Dashboards]:::grafana
                LOG_POD[📝 Logging Pod<br/>ELK Stack<br/>Centralized Logs]:::logging
            end
        end
        
        subgraph "🏢 On-Premises Data Centers"
            subgraph "🌐 Edge Node 1 - MySQL"
                EDGE1_CONN[🔌 Edge Connector<br/>MySQL Driver<br/>Connection Pool]:::edge
                EDGE1_AI[🤖 Local AI<br/>Classification<br/>Pattern Recognition]:::edgeai
                EDGE1_CACHE[⚡ Local Cache<br/>Redis<br/>Metadata Store]:::edgecache
            end
            
            subgraph "🌐 Edge Node 2 - PostgreSQL"
                EDGE2_CONN[🔌 Edge Connector<br/>PostgreSQL Driver<br/>PgBouncer Pool]:::edge
                EDGE2_AI[🤖 Local AI<br/>Classification<br/>Pattern Recognition]:::edgeai
                EDGE2_CACHE[⚡ Local Cache<br/>Redis<br/>Metadata Store]:::edgecache
            end
            
            subgraph "🌐 Edge Node N - MongoDB"
                EDGEN_CONN[🔌 Edge Connector<br/>MongoDB Driver<br/>Native Driver]:::edge
                EDGEN_AI[🤖 Local AI<br/>Classification<br/>Pattern Recognition]:::edgeai
                EDGEN_CACHE[⚡ Local Cache<br/>Redis<br/>Metadata Store]:::edgecache
            end
        end
        
        subgraph "🔐 Security Services"
            VAULT[🗝️ Secret Vault<br/>Azure Key Vault<br/>AWS Secrets Manager]:::vault
            CERT[🔒 Certificate Manager<br/>SSL/TLS Certs<br/>Auto Renewal]:::cert
            MONITOR[📊 Security Monitor<br/>SIEM Integration<br/>Threat Detection]:::security
        end
    end
    
